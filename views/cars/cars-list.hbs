<h1>{{title}}</h1>
<div class="info">

    <div id="myMap"></div>

    <h3>Lista de coches</h3>
    <div class="car-button">
        <a href="/cars/create" class="btn btn-dark">Crear un coche</a>
        <a href="/cars/cars-repair" class="btn btn-dark">Reparaciones</a>

    </div>

    <div class="container">
        <div class="row justify-content-center">
            {{#each allCars}}
                <div class="col-md-8 car-view card">

                    <h3>{{brand}} | {{model}}</h3>
                    <figure class="main-view-car"><img src="{{carImagePath}}"></figure>
                    <p><strong>Propietario: </strong> {{creatorId.username}}</p>

                    <a class="btn btn-info" href="/cars/{{_id}}/details">Ver</a>

                </div>
            {{/each }}
        </div>
    </div>
</div>

