<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">{{carToEdit.brand}} | {{carToEdit.model}}</h1>
            <div>
                <img src="{{carToEdit.carImagePath}}" alt="{{carToEdit.brand}}">
            </div>
        </div>

        <div class="col-md-6">

            <form action="/cars/{{carToEdit._id}}/edit" method="POST" {{!-- enctype="multipart/form-data" --}}>
                <div class="form-group">
                    <label for="brand-list">Marca</label>
                    <select name="brand" class="form-control" id="brand-list">
                        <option value="{{carToEdit.brand}}">{{carToEdit.brand}}</option>
                        {{#each carBrands}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="model-input">Modelo</label>
                    <input name="model" value="{{carToEdit.model}}" type="text" class="form-control" id="model-input">
                </div>
                {{!-- <div class="form-group">
                    <label for="picture-input">Imagen</label>
                    <input name="carImagePath" value="{{carToEdit.carImagePath}}" type="file" class="form-control"
                        id="picture-input">
                </div> --}}
                <div class="form-group">
                    <label for="manufacturingYear-input">Fecha de primera matriculaci√≥n</label>
                    <input name="manufacturingYear" value="{{carToEdit.manufacturingYear}}" type="month" class="form-control"
                        id="manufacturingYear-input">
                </div>
                <div class="form-group">
                    <label for="plate-input">Matricula</label>
                    <input name="plate" value="{{carToEdit.plate}}" type="text" class="form-control" id="plate-input">
                </div>
                <div class="form-group">
                    <label for="description-input">Descripcion del vehiculo</label>
                    <input name="description" value=" {{carToEdit.description}} " type="text" class="form-control"
                        id="description-input">
                </div>
                <div class="form-group">
                    <label for="kilometres-input">Kilometros</label>
                    <input name="kilometres" value="{{carToEdit.kilometres}}" type="number" class="form-control"
                        id="kilometres-input">
                </div>
                <div class="form-group">
                    <label for="state-list">Estado del vehiculo:</label>
                    <select name="state" class="form-control" id="state-list">
                        <option value="{{carToEdit.state}}">{{carToEdit.state}}</option>
                        {{#each carState}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="price-input">Precio</label>
                    <input name="price" value="{{carToEdit.price}}" type="number" class="form-control" id="price-input">
                </div>
                <div class="form-group">
                    <label for="adStatus-list">Estado del anuncio:</label>
                    <select name="adStatus" class="form-control" id="state-list">
                        <option value="{{carToEdit.adStatus}}">{{carToEdit.adStatus}}</option>
                        {{#each carAdStatus}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="location">Ubicacion</label>
                    <input name="latitud" type="text" class="form-control" id="latitud" value="{{carToEdit.location.coordinates.[0]}}">
                    <input name="longitud" type="text" class="form-control" id="longitud" value="{{carToEdit.location.coordinates.[1]}}">
                </div>

                <button type="submit" class="btn btn-dark">Modificar anuncio</button>
                <a href="/cars" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>